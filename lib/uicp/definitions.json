{
  "version": "1.0.0",
  "components": [
    {
      "uid": "NewsArticlePreview",
      "type": "news",
      "description": "A component for displaying news article previews with headline, source, description, and publication date",
      "componentPath": "components/news-article-preview",
      "inputs": {
        "headline": {
          "type": "string",
          "description": "The article headline or title",
          "required": true
        },
        "source": {
          "type": "string",
          "description": "The news source or publication name (e.g., 'The New York Times', 'BBC News')",
          "required": true
        },
        "description": {
          "type": "string",
          "description": "A brief description or snippet of the article content",
          "required": true
        },
        "publishedDate": {
          "type": "string",
          "description": "When the article was published (e.g., '2 hours ago', 'Oct 26, 2025', 'Yesterday')",
          "required": true
        },
        "url": {
          "type": "string",
          "description": "Link to the full article (optional, makes the preview clickable)",
          "required": false
        },
        "imageUrl": {
          "type": "string",
          "description": "URL to article thumbnail image (optional)",
          "required": false
        },
        "author": {
          "type": "string",
          "description": "Article author name (optional)",
          "required": false
        }
      },
      "example": {
        "uid": "NewsArticlePreview",
        "data": {
          "headline": "Scientists Discover New Species in Deep Ocean",
          "source": "National Geographic",
          "description": "Marine biologists have identified a previously unknown species of bioluminescent jellyfish in the Mariana Trench, marking a significant breakthrough in deep-sea exploration.",
          "publishedDate": "2 hours ago",
          "author": "Jane Smith",
          "url": "https://example.com/article"
        }
      }
    },
    {
      "uid": "NBAGameScore",
      "type": "sports",
      "description": "A component for displaying NBA basketball game scores with team names, scores, and game status",
      "componentPath": "components/nba-game-score",
      "inputs": {
        "homeTeam": {
          "type": "string",
          "description": "Name of the home team",
          "required": true
        },
        "awayTeam": {
          "type": "string",
          "description": "Name of the away team",
          "required": true
        },
        "homeScore": {
          "type": "number",
          "description": "Score of the home team",
          "required": true
        },
        "awayScore": {
          "type": "number",
          "description": "Score of the away team",
          "required": true
        },
        "gameDate": {
          "type": "string",
          "description": "Date of the game (e.g., 'Oct 26, 2025' or '10/26/2025')",
          "required": false
        },
        "gameStatus": {
          "type": "string",
          "description": "Current status of the game",
          "required": false,
          "default": "final",
          "enum": ["scheduled", "live", "final"]
        },
        "quarter": {
          "type": "string",
          "description": "Current quarter or period (e.g., 'Q1', 'Q4', 'OT')",
          "required": false
        },
        "timeRemaining": {
          "type": "string",
          "description": "Time remaining in current period (e.g., '2:30', '0:45')",
          "required": false
        }
      },
      "example": {
        "uid": "NBAGameScore",
        "data": {
          "homeTeam": "Los Angeles Lakers",
          "awayTeam": "Boston Celtics",
          "homeScore": 108,
          "awayScore": 105,
          "gameDate": "Oct 26, 2025",
          "gameStatus": "final",
          "quarter": "Q4",
          "timeRemaining": "Final"
        }
      }
    },
    {
      "uid": "BarChart",
      "type": "chart",
      "description": "A component for displaying data as a bar chart with customizable colors, legend, grid, and tooltip",
      "componentPath": "components/bar-chart",
      "inputs": {
        "title": {
          "type": "string",
          "description": "Title of the chart (optional)",
          "required": false
        },
        "description": {
          "type": "string",
          "description": "Description or subtitle of the chart (optional)",
          "required": false
        },
        "data": {
          "type": "array",
          "description": "Array of data points. Each point must have a 'category' field and any number of data fields",
          "required": true
        },
        "dataKeys": {
          "type": "array",
          "description": "Array of field names to display as bars (e.g., ['desktop', 'mobile'])",
          "required": true
        },
        "categoryKey": {
          "type": "string",
          "description": "Field name to use for X-axis categories (default: 'category')",
          "required": false,
          "default": "category"
        },
        "colors": {
          "type": "array",
          "description": "Array of color hex codes for bars (optional, uses default colors if not provided)",
          "required": false
        },
        "showGrid": {
          "type": "boolean",
          "description": "Whether to show grid lines (default: true)",
          "required": false,
          "default": true
        },
        "showLegend": {
          "type": "boolean",
          "description": "Whether to show legend (default: true)",
          "required": false,
          "default": true
        },
        "showTooltip": {
          "type": "boolean",
          "description": "Whether to show tooltip on hover (default: true)",
          "required": false,
          "default": true
        },
        "height": {
          "type": "string",
          "description": "Height of the chart (e.g., '350px', '400px') (default: '350px')",
          "required": false,
          "default": "350px"
        }
      },
      "example": {
        "uid": "BarChart",
        "data": {
          "title": "Website Traffic",
          "description": "Monthly visitors by device type",
          "data": [
            { "category": "January", "desktop": 186, "mobile": 80 },
            { "category": "February", "desktop": 305, "mobile": 200 },
            { "category": "March", "desktop": 237, "mobile": 120 },
            { "category": "April", "desktop": 73, "mobile": 190 },
            { "category": "May", "desktop": 209, "mobile": 130 },
            { "category": "June", "desktop": 214, "mobile": 140 }
          ],
          "dataKeys": ["desktop", "mobile"]
        }
      }
    },
    {
      "uid": "LineChart",
      "type": "chart",
      "description": "A component for displaying data as a line chart with customizable colors, legend, grid, and tooltip",
      "componentPath": "components/line-chart",
      "inputs": {
        "title": {
          "type": "string",
          "description": "Title of the chart (optional)",
          "required": false
        },
        "description": {
          "type": "string",
          "description": "Description or subtitle of the chart (optional)",
          "required": false
        },
        "data": {
          "type": "array",
          "description": "Array of data points. Each point must have a 'category' field and any number of data fields",
          "required": true
        },
        "dataKeys": {
          "type": "array",
          "description": "Array of field names to display as lines (e.g., ['desktop', 'mobile'])",
          "required": true
        },
        "categoryKey": {
          "type": "string",
          "description": "Field name to use for X-axis categories (default: 'category')",
          "required": false,
          "default": "category"
        },
        "colors": {
          "type": "array",
          "description": "Array of color hex codes for lines (optional, uses default colors if not provided)",
          "required": false
        },
        "showGrid": {
          "type": "boolean",
          "description": "Whether to show grid lines (default: true)",
          "required": false,
          "default": true
        },
        "showLegend": {
          "type": "boolean",
          "description": "Whether to show legend (default: true)",
          "required": false,
          "default": true
        },
        "showTooltip": {
          "type": "boolean",
          "description": "Whether to show tooltip on hover (default: true)",
          "required": false,
          "default": true
        },
        "height": {
          "type": "string",
          "description": "Height of the chart (e.g., '350px', '400px') (default: '350px')",
          "required": false,
          "default": "350px"
        },
        "curved": {
          "type": "boolean",
          "description": "Whether lines should be curved (default: true)",
          "required": false,
          "default": true
        }
      },
      "example": {
        "uid": "LineChart",
        "data": {
          "title": "Revenue Growth",
          "description": "Monthly revenue over 6 months",
          "data": [
            { "category": "January", "revenue": 4500, "expenses": 3200 },
            { "category": "February", "revenue": 5200, "expenses": 3400 },
            { "category": "March", "revenue": 4800, "expenses": 3600 },
            { "category": "April", "revenue": 6100, "expenses": 3800 },
            { "category": "May", "revenue": 7200, "expenses": 4000 },
            { "category": "June", "revenue": 8100, "expenses": 4200 }
          ],
          "dataKeys": ["revenue", "expenses"],
          "curved": true
        }
      }
    }
  ]
}

