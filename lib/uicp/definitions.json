{
  "version": "1.0.0",
  "components": [
    {
      "uid": "NewsArticlePreview",
      "type": "news",
      "description": "A component for displaying news article previews with headline, source, description, and publication date",
      "componentPath": "components/news-article-preview",
      "inputs": {
        "headline": {
          "type": "string",
          "description": "The article headline or title",
          "required": true
        },
        "source": {
          "type": "string",
          "description": "The news source or publication name (e.g., 'The New York Times', 'BBC News')",
          "required": true
        },
        "description": {
          "type": "string",
          "description": "A brief description or snippet of the article content",
          "required": true
        },
        "publishedDate": {
          "type": "string",
          "description": "When the article was published (e.g., '2 hours ago', 'Oct 26, 2025', 'Yesterday')",
          "required": true
        },
        "url": {
          "type": "string",
          "description": "Link to the full article (optional, makes the preview clickable)",
          "required": false
        },
        "imageUrl": {
          "type": "string",
          "description": "URL to article thumbnail image (optional)",
          "required": false
        },
        "author": {
          "type": "string",
          "description": "Article author name (optional)",
          "required": false
        }
      },
      "example": {
        "uid": "NewsArticlePreview",
        "data": {
          "headline": "Scientists Discover New Species in Deep Ocean",
          "source": "National Geographic",
          "description": "Marine biologists have identified a previously unknown species of bioluminescent jellyfish in the Mariana Trench, marking a significant breakthrough in deep-sea exploration.",
          "publishedDate": "2 hours ago",
          "author": "Jane Smith",
          "url": "https://example.com/article"
        }
      }
    },
    {
      "uid": "NBAGameScore",
      "type": "sports",
      "description": "A component for displaying NBA basketball game scores with team names, scores, and game status",
      "componentPath": "components/nba-game-score",
      "inputs": {
        "homeTeam": {
          "type": "string",
          "description": "Name of the home team",
          "required": true
        },
        "awayTeam": {
          "type": "string",
          "description": "Name of the away team",
          "required": true
        },
        "homeScore": {
          "type": "number",
          "description": "Score of the home team",
          "required": true
        },
        "awayScore": {
          "type": "number",
          "description": "Score of the away team",
          "required": true
        },
        "gameDate": {
          "type": "string",
          "description": "Date of the game (e.g., 'Oct 26, 2025' or '10/26/2025')",
          "required": false
        },
        "gameStatus": {
          "type": "string",
          "description": "Current status of the game",
          "required": false,
          "default": "final",
          "enum": ["scheduled", "live", "final"]
        },
        "quarter": {
          "type": "string",
          "description": "Current quarter or period (e.g., 'Q1', 'Q4', 'OT')",
          "required": false
        },
        "timeRemaining": {
          "type": "string",
          "description": "Time remaining in current period (e.g., '2:30', '0:45')",
          "required": false
        }
      },
      "example": {
        "uid": "NBAGameScore",
        "data": {
          "homeTeam": "Los Angeles Lakers",
          "awayTeam": "Boston Celtics",
          "homeScore": 108,
          "awayScore": 105,
          "gameDate": "Oct 26, 2025",
          "gameStatus": "final",
          "quarter": "Q4",
          "timeRemaining": "Final"
        }
      }
    }
  ]
}

